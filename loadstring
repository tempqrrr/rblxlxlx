local args = {
	"Spit",
}

local toggle = false  -- This will control the loop
local userInputService = game:GetService("UserInputService")
local runService = game:GetService("RunService")

-- Create the function to start/stop the loop
local function toggleLoop()
    toggle = not toggle
end

-- Listen for the "J" key press to toggle the loop
userInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == Enum.KeyCode.J then
        toggleLoop()
    end
end)

-- Run the loop on each frame if toggle is true
runService.Heartbeat:Connect(function()
    if toggle then
        for i = 1, 100 do 
            game:GetService("ReplicatedStorage"):WaitForChild("MainRemotes"):WaitForChild("MainRemoteEvent"):FireServer(unpack(args))
        end
    end
end)
