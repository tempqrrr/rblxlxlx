local remoteEvent = game.ReplicatedStorage:WaitForChild("Bridgenet2Main"):WaitForChild("dataRemoteEvent")
local toggled = true

local args = {
    [1] = {
        [1] = {
            ["Module"] = "M1"
        },
        [2] = "\5"
    }
}

local function isBossActive()
    return workspace:FindFirstChild("Entities") and #workspace.Entities:GetChildren() > 0
end

local function keepM1ing()
    while toggled do
        if not isBossActive() then
            return
        end
        remoteEvent:FireServer(unpack(args))
        wait(0.1)
    end
end

task.spawn(keepM1ing)
