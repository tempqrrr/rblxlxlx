local remoteEvent = game.ReplicatedStorage:WaitForChild("Bridgenet2Main"):WaitForChild("dataRemoteEvent")

local toggled = true  -- Set this to `true` to start, `false` to stop

local args = {
    [1] = {
        [1] = {
            ["Module"] = "M1"
        },
        [2] = "\5"
    }
}

local function keepM1ing()
    task.spawn(function()
        while true do
            task.wait(0.3)

            local bossHRP = workspace:FindFirstChild("Entities") and getBossHRP()
            if not bossHRP then
                -- Boss doesn't exist, pause function
                continue
            end

            if toggled then
                remoteEvent:FireServer(unpack(args))
                task.wait(0.1) -- Keep attack speed same as before
            end
        end
    end)
end

keepM1ing()
